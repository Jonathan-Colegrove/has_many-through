<p id="notice"><%= notice %></p>

<% if @category.user %>
  <p>
    Created by: <%= @category.user.name %>
  </p>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Subject:</strong>
  <%= @category.subject %>
</p>

<p>Terms:</p>
<% @category.terms.each do |term| %>
    <p><%= term.name %></p>
<% end %>

<% if @category.authorized?(current_user) %>
  <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-default" %> |
<% end %>
<%= link_to 'Back', categories_path, class: "btn btn-default" %>
