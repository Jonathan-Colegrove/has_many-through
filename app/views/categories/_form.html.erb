<%= form_for(category, html: { class: "form-horizontal" }) do |f| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> stopped this category from being saved:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :subject, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :subject, class: "form-control" %>
    </div>
  </div>

  <div class="form-group field checks">
    <%= f.collection_check_boxes(:term_ids, Term.all, :id, :name) do |term| %>
        <span>
          <%= term.check_box %>
          <%= term.label %>
        </span>
    <% end %>
  </div>

  <div class="actions btn btn-default">
    <%= f.submit %>
  </div>
<% end %>
