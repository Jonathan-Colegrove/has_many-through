<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<div class="table-responsive">
  <table class="table table-bordered table-condensed table-hover text-center">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Subject</th>
        <th class="text-center">Associated Terms</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category.name, category %></td>
          <td><%= category.subject %></td>
          <td><%= category.terms.count %></td>
          <td>
            <% if category.authorized?(current_user) %>
              <%= link_to edit_category_path(category) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            <% end %>
          </td>
          <td>
            <% if category.authorized?(current_user) %>
              <%= link_to category, method: :delete, data: { confirm: 'You really want to do this?' } do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-default" %>
