<p id="notice"><%= notice %></p>

<h1>Terms</h1>

<div class="table-responsive">
  <table class="table table-bordered table-condensed table-hover text-center">
    <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Definition</th>
        <th class="text-center">Author</th>
        <th class="text-center">Resource</th>
        <th class="text-center">Associated Categories</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @terms.each do |term| %>
        <tr>
          <td><%= link_to term.name, term %></td>
          <td><%= term.definition %></td>
          <td><%= term.author %></td>
          <td><%= term.resource %></td>
          <td><%= term.categories.count %></td>
          <td>
            <% if term.authorized?(current_user) %>
              <%= link_to edit_term_path(term) do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
            <% end %>
          </td>
          <td>
            <% if term.authorized?(current_user) %>
              <%= link_to term, method: :delete, data: { confirm: 'You really want to do this?' } do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Term', new_term_path, class: "btn btn-default" %>
