<%= form_for(term, html: { class: "form-horizontal" }) do |f| %>
  <% if term.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(term.errors.count, "error") %> stopped this term from being saved:</h2>

      <ul>
      <% term.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :definition, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :definition, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :author, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :author, class: "form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :resource, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :resource, class: "form-control" %>
    </div>
  </div>

  <div class="form-group field checks">
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
        <span>
          <%= category.check_box %>
          <%= category.label %>
        </span>
    <% end %>
  </div>

  <div class="actions btn btn-default">
    <%= f.submit %>
  </div>
<% end %>
