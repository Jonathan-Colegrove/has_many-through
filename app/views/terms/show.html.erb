<p id="notice"><%= notice %></p>

<% if @term.user %>
  <p>
    Created by: <%= @term.user.name %>
  </p>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @term.name %>
</p>

<p>
  <strong>Definition:</strong>
  <%= @term.definition %>
</p>

<p>
  <strong>Author:</strong>
  <%= @term.author %>
</p>

<p>
  <strong>Resource:</strong>
  <%= @term.resource %>
</p>

<p>Categories:</p>
<% @term.categories.each do |category| %>
    <p><%= category.name %></p>
<% end %>

<% if @term.authorized?(current_user) %>
  <%= link_to 'Edit', edit_term_path(@term), class: "btn btn-default" %> |
<% end %>

<%= link_to 'Back', terms_path, class: "btn btn-default" %>
